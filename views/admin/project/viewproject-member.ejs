<%- include('../../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../../includes/navigation.ejs')%>
            <main id="main">
                <% if(messages.info) { %>
                    <%= messages.info %>
                        <% } %>
                            <p>view project member</p>
                            <table border="1px">
                                <tr>
                                    <th>SN</th>
                                    <th>Project Name</th>
                                    <th>Name</th>
                                    <!-- <th>Last Name</th>
                                    <th>Action</th> -->
                                </tr>
                                <% data.forEach(function(data, i){ %>
                                    <tr>
                                        <td>
                                            <%= i+1 %>
                                        </td>

                                        <td>
                                            <%= data.name %>
                                        </td>

                                        <td>
                                            <% data.projectMember.forEach(function(projectMember){ %>
                                                <ol>
                                                    <li>
                                                        <%= projectMember.user.firstName %>
                                                            <%= projectMember.user.lastName %>
                                                                <a href="/delete-project-member/<%= data.id%>/<%= projectMember.user.id%>">Remove</a>
                                                    </li>
                                                </ol>
                                                <% }) %>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <button onclick="window.location.href='addproject-member'">Add new</button>
            </main>
    </body>
    <%- include('../../includes/end.ejs') %>